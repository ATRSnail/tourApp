<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tour.tourapp.mvp.ui.fragment.MineFragment">

    <RelativeLayout
        android:id="@+id/layout_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_mine"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_ring_white"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_img_user_default" />
               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:visibility="gone"
                       android:id="@+id/name_mine"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:text="用户姓名"
                       android:textColor="@color/text_color_white"
                       android:textSize="15sp" />
                   <TextView
                       android:clickable="true"
                       android:id="@+id/login_mine"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:text="登录/"
                       android:textColor="@color/text_color_white"
                       android:textSize="15sp" />
                   <TextView
                       android:clickable="true"
                       android:id="@+id/register_mine"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:text="注册"
                       android:textColor="@color/text_color_white"
                       android:textSize="15sp" />
               </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_efefef"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_mine"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/list_item_selector"
            android:drawableLeft="@mipmap/ic_setting_balance"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_setting_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="14dp"
            android:text="我的订单"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_cccccc" />

        <TextView
            android:id="@+id/save_mine"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector"
            android:drawableLeft="@mipmap/ic_setting_record"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_setting_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="14dp"
            android:text="我的收藏"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_cccccc" />

        <TextView
            android:id="@+id/address_mine"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector"
            android:drawableLeft="@mipmap/ic_setting_attention"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_setting_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="14dp"
            android:text="我的地址"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16" />


        <TextView
            android:id="@+id/setting_mine"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/list_item_selector"
            android:drawableLeft="@mipmap/ic_setting_setting"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_setting_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="14dp"
            android:text="设置"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_cccccc" />


        <TextView
            android:id="@+id/more_mine"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/list_item_selector"
            android:drawableLeft="@mipmap/ic_setting_helper"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_setting_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="14dp"
            android:text="更多"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16" />


    </LinearLayout>

</LinearLayout>
